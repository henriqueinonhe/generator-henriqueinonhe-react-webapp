{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true, 
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true 
  },
  "exclude": ["node_modules"],
  "typedocOptions": {
    "out": "docs",
    "inputFiles":["./backend/src", "./core/src", "./frontend/src"],
    "mode": "module",
    "ignoreCompilerErrors": true,
    "excludeNotExported": true
  }
}