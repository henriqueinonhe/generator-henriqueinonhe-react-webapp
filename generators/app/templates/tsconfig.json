{
  "compilerOptions": {
    //Allows intermixing JS and TS files/syntax
    "allowJs": true, 
    //Checks JS files typing (as much as possible)
    "checkJs": true,
    //Enables JSX transpilation
    "jsx": "react-jsx",
    //ESNext modules for lazy loading
    "module": "esnext",
    "sourceMap": true,
    "target": "es6",
    //Enables all strict checks
    "strict": true,
    //Module Interoperation
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true 
  },
  "include": ["./src"],
  "typedocOptions": {
    "out": "docs",
    "entryPoints":["./src"],
    "mode": "module",
    "ignoreCompilerErrors": true,
    "excludeNotExported": true
  }
}